extends layout

block content
  .inner
    h2 Top #{stores.length} Stores
    table.table
      thead
        td photo
        td ranking
        td name
        td reviews
        td Average Rating
      each store, i in stores
        tr
          td
            a(href=`/store/${store.slug}`, title=store.name)
              img(src=`/uploads/${store.photo || 'store.png'}`, alt=store.name width=200)
          td #{i+1}
          td
            a(href=`/store/${store.slug}`, title=store.name)= store.name
          td #{store.reviews.length}
          td #{Math.round(store.averageRating * 10) / 10} /5
